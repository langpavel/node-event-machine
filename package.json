{
  "name": "event-machine",
  "version": "0.0.3",
  "description": "Object Oriented ES6 state machine with promises supporting timeout transitions",
  "keywords": [
    "ES6",
    "state machine",
    "event machine",
    "asynchronous"
  ],
  "main": "src/index.js",
  "scripts": {
    "test": "eslint src && jest"
  },
  "author": "Pavel Lang <langpavel@phpskelet.org>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/langpavel/node-event-machine"
  },
  "bugs": {
    "url": "https://github.com/langpavel/node-event-machine/issues"
  },
  "dependencies": {
    "bluebird": "^2.9.27"
  },
  "devDependencies": {
    "babel": "^5.5.6",
    "babel-eslint": "^3.1.15",
    "babel-jest": "^5.2.0",
    "eslint": "^0.22.1",
    "jest": "^0.1.40",
    "jest-cli": "^0.4.11"
  },
  "jest": {
    "rootDir": "",
    "scriptPreprocessor": "jest/preprocessor.js",
    "setupEnvScriptFile": "jest/environment.js",
    "persistModuleRegistryBetweenSpecs": true,
    "testFileExtensions": [
      "js"
    ],
    "modulePathIgnorePatterns": [
      "/external/",
      "/node_modules/",
      "/.module-cache/"
    ],
    "testPathDirs": [
      "<rootDir>/src"
    ],
    "unmockedModulePathPatterns": [
      ""
    ]
  }
}
